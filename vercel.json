{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    },
    {
      "src": "backend/server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/server.js"
    },
    {
      "src": "/static/(.*)",
      "dest": "/frontend/static/$1"
    },
    {
      "src": "/share/static/(.*)",
      "dest": "/frontend/static/$1"
    },
    {
      "src": "/share/(.*\\.(js|css|png|jpg|jpeg|gif|ico|svg|json|txt|woff|woff2|ttf|eot))",
      "dest": "/frontend/$1"
    },
    {
      "src": "/(.*\\.(js|css|png|jpg|jpeg|gif|ico|svg|json|txt|woff|woff2|ttf|eot))",
      "dest": "/frontend/$1"
    },
    {
      "src": "/manifest\\.json",
      "dest": "/frontend/manifest.json"
    },
    {
      "src": "/og-image\\.png",
      "dest": "/frontend/og-image.png"
    },
    {
      "src": "/favicon\\.png",
      "dest": "/frontend/favicon.png"
    },
    {
      "src": "/share/(.*)",
      "dest": "backend/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/index.html"
    }
  ]
}
