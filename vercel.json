{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    },
    {
      "src": "backend/server.js",
      "use": "@vercel/node"
    }
  ],
  "functions": {
    "api/index.js": {
      "includeFiles": "backend/assets/fonts/**/*"
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/server.js"
    },
    {
      "src": "/static/(.*)",
      "dest": "/frontend/static/$1"
    },
    {
      "src": "/auth/static/(.*)",
      "dest": "/frontend/static/$1"
    },
    {
      "src": "/admin/static/(.*)",
      "dest": "/frontend/static/$1"
    },
    {
      "src": "/share/static/(.*)",
      "dest": "/frontend/static/$1"
    },
    {
      "src": "/verify/static/(.*)",
      "dest": "/frontend/static/$1"
    },
    {
      "src": "/admin/(.*\\.(js|css|png|jpg|jpeg|gif|ico|svg|json|txt|woff|woff2|ttf|eot))",
      "dest": "/frontend/$1"
    },
    {
      "src": "/share/(.*\\.(js|css|png|jpg|jpeg|gif|ico|svg|json|txt|woff|woff2|ttf|eot))",
      "dest": "/frontend/$1"
    },
    {
      "src": "/verify/(.*\\.(js|css|png|jpg|jpeg|gif|ico|svg|json|txt|woff|woff2|ttf|eot))",
      "dest": "/frontend/$1"
    },
    {
      "src": "/auth/(.*\\.(js|css|png|jpg|jpeg|gif|ico|svg|json|txt|woff|woff2|ttf|eot))",
      "dest": "/frontend/$1"
    },
    {
      "src": "/(.*\\.(js|css|png|jpg|jpeg|gif|ico|svg|json|txt|woff|woff2|ttf|eot))",
      "dest": "/frontend/$1"
    },
    {
      "src": "/manifest\\.json",
      "dest": "/frontend/manifest.json"
    },
    {
      "src": "/auth/manifest\\.json",
      "dest": "/frontend/manifest.json"
    },
    {
      "src": "/admin/manifest\\.json",
      "dest": "/frontend/manifest.json"
    },
    {
      "src": "/verify/manifest\\.json",
      "dest": "/frontend/manifest.json"
    },
    {
      "src": "/favicon\\.png",
      "dest": "/frontend/favicon.png"
    },
    {
      "src": "/hifadhui-400x400\\.png",
      "dest": "/frontend/public/hifadhui-400x400.png"
    },
    {
      "src": "/auth/favicon\\.png",
      "dest": "/frontend/favicon.png"
    },
    {
      "src": "/admin/favicon\\.png",
      "dest": "/frontend/favicon.png"
    },
    {
      "src": "/verify/favicon\\.png",
      "dest": "/frontend/favicon.png"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/index.html"
    }
  ]
}
