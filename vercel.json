{
  "version": 2,
  "builds": [
    {
      "src": "backend/server.js",
      "use": "@vercel/node",
      "config": {
        "maxDuration": 30,
        "maxLambdaSize": 10240
      }
    },
    { "src": "frontend/package.json", 
      "use": "@vercel/static-build", 
      "config": { "distDir": "build", "maxDuration": 30, "maxLambdaSize": 10240 } 
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/backend/server.js" },
    { "src": "/(.*)", "dest": "/frontend/$1" }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
